@model ContactListModel
<p class="h1 fw-bold mb-5 mx-1 md-4 mt-4">Your contacts list</p>


        @if (Model.contacts.Length > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Username</th>
                    </tr>
                </thead>
            <tbody>
            @foreach (var username in Model.contacts)
            {
                <tr>
                    <td><a href="@Url.Action("Index", "Account",  new { username })">@username</a></td>
                </tr>
            }
            </tbody>
            </table>
        }
        else
        {
            <p>You don't have any contacts yet</p>
        }